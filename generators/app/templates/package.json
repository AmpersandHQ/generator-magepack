{
  "name": "<%= module %>",
  "version": "0.1.0",
  "description": "<%= description %>",
  "main": "view/frontend/web/js/dist/app.min.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "dev": "npm run silent-dev --silent || true",
    "silent-dev": "npm run lint && webpack-dashboard -- webpack-dev-server --config ./webpack.dev.config.js",
    "build": "npm run silent-build --silent || true",
    "silent-build": "npm run lint && webpack --hide-modules true --progress true --config ./webpack.config.js",
    "lint": "eslint . --ext .js --ext .jsx --ignore-pattern .gitignore --cache --ignore-pattern example --ignore-pattern dist"
  },
  "lint-staged": {
    "app/**/*.js": [
      "prettier --write --tab-width 4 --single-quote true",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-es2015-destructuring",
      "transform-class-properties"
    ],
    "env": {
      "development": {
        "plugins": [
          "react-hot-loader/babel",
          "transform-object-rest-spread",
          "transform-es2015-destructuring",
          "transform-class-properties"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "amd": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-console": 0,
      "no-underscore-dangle": 1,
      "quotes": [
        2,
        "single"
      ],
      "arrow-parens": [
        2,
        "always"
      ],
      "no-fallthrough": 0
    }
  },
  "private": true,
  "author": "<%- author %>",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "latest",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.3.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "latest",
    "html-webpack-plugin": "^2.15.0",
    "husky": "^0.13.3",
    "jest": "latest",
    "lint-staged": "^3.4.2",
    "npm-install-webpack-plugin": "^4.0.0",
    "prettier": "^1.3.1",
    "prop-types": "15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-redux": "latest",
    "react-router-component": "latest",
    "redux": "^3.5.2",
    "redux-thunk": "latest",
    "webpack": "^2.6.1",
    "webpack-dashboard": "latest",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "es6-promise": "latest",
    "isomorphic-fetch": "2.2.1",
    "qs": "6.4.0"
  }
}

{
  "name": "<%= module %>",
  "version": "0.1.0",
  "description": "<%= description %>",
  "main": "view/frontend/web/js/dist/app.min.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "dev": "npm run silent-dev --silent || true",
    "silent-dev": "npm run lint && webpack-dashboard -- webpack-dev-server --config ./webpack.dev.config.js",
    "build": "npm run silent-build --silent || true",
    "silent-build": "npm run lint && webpack --hide-modules true --progress true --config ./webpack.prod.config.js",
    "lint": "eslint . --ext .js --ext .jsx --ignore-path .gitignore --cache --ignore-pattern example --ignore-pattern dist"
  },
  "lint-staged": {
    "app/**/*.js": [
      "prettier --write --tab-width 4 --single-quote true",
      "git add"
    ]
  },
  "babel": {
    "presets": ["es2015", "react"],
    "env": {
      "development": {
        "presets": ["react-hmre"]
      }
    }
  }, 
  "eslintConfig": {
    "extends": [
      "eslint:recommended", "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "amd": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-console": 0,
      "no-underscore-dangle": 1,
      "quotes": [2, "single"],
      "arrow-parens": [2, "always"],
      "no-fallthrough": 0
    }
  },
  "private": true,
  "author": "<%- author %>",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-eslint": "latest",
    "babel-loader": "latest",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "eslint": "^3.3.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "latest",
    "html-webpack-plugin": "^2.15.0",
    "husky": "^0.13.3",
    "jest": "latest",
    "lint-staged": "^3.4.2",
    "npm-install-webpack-plugin": "^4.0.0",
    "prettier": "^1.3.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "latest",
    "redux": "^3.5.2",
    "webpack": "^2.5.1",
    "webpack-dashboard": "latest",
    "webpack-dev-server": "latest",
    "react-router-component": "latest",
    "prop-types": "15.5.10",
    "redux-thunk": "latest",
    "react-redux": "latest"
  },
  "dependencies": {
    "es6-promise": "latest",
    "isomorphic-fetch": "2.2.1",
    "qs": "6.4.0"
  }
}
